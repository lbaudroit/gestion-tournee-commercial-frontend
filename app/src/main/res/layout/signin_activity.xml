<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/default_page_margin"
              android:gravity="center"
              android:orientation="vertical">

    <EditText
            android:id="@+id/editText_name"
            style="@style/RoundedEditText"
            android:layout_width="match_parent"
            android:autofillHints="name"
            android:inputType="text"
            android:maxLength="50"
            android:hint="@string/nom"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_space"/>

    <EditText
            android:id="@+id/editText_firstname"
            android:autofillHints="name"
            style="@style/RoundedEditText"
            android:layout_width="match_parent"
            android:inputType="text"
            android:maxLength="50"
            android:hint="@string/prenom"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_space"/>

    <EditText
            android:id="@+id/editText_email"
            android:autofillHints="emailAddress"
            style="@style/RoundedEditText"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:maxLength="300"
            android:hint="@string/email"/>

    <View
            style="@style/Separator"
            android:layout_width="match_parent"/>

    <TextView
            android:id="@+id/textView_adress"
            android:layout_width="match_parent"
            style="@style/RoundedEditText"
            android:hint="@string/adresse"
            android:drawableEnd="@drawable/baseline_expand_more_24"/>

    <View
            style="@style/Separator"
            android:layout_width="match_parent"/>

    <EditText
            android:id="@+id/editText_password"
            android:autofillHints="password"
            style="@style/RoundedEditText"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:maxLength="50"
            android:hint="@string/password"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_space"/>

    <EditText
            android:id="@+id/editText_passwordConfirmation"
            android:autofillHints="password"
            style="@style/RoundedEditText"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:maxLength="50"
            android:hint="@string/password_again"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_space"/>

    <Button
            android:id="@+id/button_signin"
            style="@style/BoutonPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signin"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_space"/>

    <Button
            android:id="@+id/button_login"
            style="@style/BoutonSecondaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"/>
</LinearLayout>