<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <!-- Carte OSMdroid -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Barre supérieure avec le nom et l'adresse du client -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:padding="12dp">

        <TextView
            android:id="@+id/client_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom entreprise"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/client_company_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse entreprise"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- Bouton flottant pour recentrer la carte -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/white"
        app:elevation="6dp"/>

    <!-- Zone des boutons en bas -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Première ligne : Visité / Passer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="Visité"
                android:backgroundTint="@color/neutral_blue"/>

            <Button
                android:id="@+id/btn_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="Passer"
                android:backgroundTint="@color/neutral_blue"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_recenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="centrer"
            android:backgroundTint="@color/neutral_blue"/>
        <!-- Deuxième ligne : Pause / Arrêter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

            <Button
                android:id="@+id/btn_pause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="Pause"
                android:backgroundTint="@color/neutral_blue"/>

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="Arrêter"
                android:backgroundTint="@color/neutral_blue"/>
        </LinearLayout>
    </LinearLayout>


    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>


