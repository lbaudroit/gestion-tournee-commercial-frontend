<?xml version="1.0" encoding="utf-8"?>

<!-- Linear layout as parent layout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Text view to show the text Select course-->
    <TextView
        android:id="@+id/titre"
        style="@style/TitreSousPartie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sectionner_un_client"
        android:layout_margin="@dimen/espace_vertical_champs" />

    <!-- Edit text to allow user to type name
           of item he/she wants to search-->
    <EditText
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text"
        android:hint="@string/rechercher"
        android:singleLine="true" />

    <!-- List view to insert list of items-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view" />

</LinearLayout>