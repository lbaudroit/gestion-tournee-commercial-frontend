<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Separator" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_one</item>
        <item name="android:background">?android:attr/listDivider</item>

        <item name="android:layout_marginLeft">@dimen/separator_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/separator_margin_horizontal</item>

        <item name="android:layout_marginTop">@dimen/separator_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/separator_margin_vertical</item>
    </style>

    <style name="ListTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_list_title</item>
    </style>

    <style name="ListSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_list_subtitle</item>
        <item name="android:alpha">0.8</item>

    </style>

    <style name="ListItemDeleteButton">
        <item name="android:layout_width">@dimen/button_size_delete</item>
        <item name="android:layout_height">@dimen/button_size_delete</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/rounded_delete</item>
        <item name="android:padding">@dimen/passing_icon_delete_button</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AddButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/add</item>
        <item name="android:minWidth">@dimen/size_zero</item>
        <item name="android:minHeight">@dimen/size_zero</item>
        <item name="android:paddingStart">@dimen/padding_start_add_button</item>
        <item name="android:paddingTop">@dimen/padding_horizontal_add_button</item>
        <item name="android:paddingBottom">@dimen/padding_horizontal_add_button</item>
        <item name="android:paddingEnd">@dimen/padding_end_add_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_add_bottom</item>
    </style>

    <style name="BigAddButton">
        <item name="android:backgroundTint">@color/add</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:backgroundTint">@color/neutral_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/neutral_blue</item>
        <item name="android:strokeColor">@color/neutral_blue</item>
        <item name="android:strokeWidth">@dimen/size_one</item>
        <item name="strokeColor">@color/neutral_blue</item>
        <item name="strokeWidth">@dimen/size_one</item>
    </style>

    <style name="AdminButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/admin</item>
        <item name="android:strokeColor">@color/admin</item>
        <item name="android:strokeWidth">@dimen/size_one</item>
        <item name="strokeColor">@color/admin</item>
        <item name="strokeWidth">@dimen/size_one</item>
    </style>

    <style name="RoundedEditText">
        <item name="android:layout_height">@dimen/text_size_edit</item>
        <item name="android:paddingStart">@dimen/padding_start_edit_text</item>
        <item name="android:background">@drawable/outline_edit_text</item>
        <item name="android:drawablePadding">@dimen/drawable_padding_edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="RoundedEditTextArea">
        <item name="android:paddingStart">@dimen/padding_start_edit_text</item>
        <item name="android:background">@drawable/outline_edit_text_area</item>
        <item name="android:drawablePadding">@dimen/drawable_padding_edit_text</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="SubPartTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Informations entreprise sur la map-->

    <style name="PrimaryInfoText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SecondaryInfoText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
</resources>