<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Separator" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/one</item>
        <item name="android:background">?android:attr/listDivider</item>

        <item name="android:layout_marginLeft">@dimen/separator_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/separator_margin_horizontal</item>

        <item name="android:layout_marginTop">@dimen/separator_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/separator_margin_vertical</item>
    </style>

    <style name="ListTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ListSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.8</item>

    </style>

    <style name="ListItemDeleteButton">
        <item name="android:layout_width">@dimen/taille_btn_supprimer</item>
        <item name="android:layout_height">@dimen/taille_btn_supprimer</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/arrondi_supprimer</item>
        <item name="android:padding">@dimen/padding_icone_btn_supprimer</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BoutonAjouter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/ajouter</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">@dimen/padding_start_btn_ajouter</item>
        <item name="android:paddingTop">@dimen/padding_horizontal_btn_ajouter</item>
        <item name="android:paddingBottom">@dimen/padding_horizontal_btn_ajouter</item>
        <item name="android:paddingEnd">@dimen/padding_end_btn_ajouter</item>
    </style>

    <style name="BoutonPrincipal">
        <item name="android:backgroundTint">@color/neutral_blue</item>
    </style>

    <style name="BoutonSecondaire">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/neutral_blue</item>
        <item name="android:strokeColor">@color/neutral_blue</item>
        <item name="android:strokeWidth">@dimen/one</item>
        <item name="strokeColor">@color/neutral_blue</item>
        <item name="strokeWidth">@dimen/one</item>
    </style>
    
    <style name="RoundedEditText">
        <item name="android:paddingStart">@dimen/padding_start_edit_text</item>
        <item name="android:background">@drawable/outline_edit_text</item>
        <item name="android:drawablePadding">@dimen/drawable_padding_edit_text</item>
        <item name="android:textSize">@dimen/default_font_size</item>
    </style>

    <style name="TitreSousPartie">
        <item name="android:textSize">@dimen/titre_partie_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>